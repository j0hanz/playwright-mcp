{
  "servers": {
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=${input:exa-api-key}&tools=web_search_exa,get_code_context_exa"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "${input:github-pat}"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-1e93498a-93c3-4326-972a-115b80e18ee7"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory@latest"]
    },
    "apify": {
      "type": "http",
      "url": "https://mcp.apify.com",
      "headers": {
        "Authorization": "Bearer ${input:apify-api-key}"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "node",
      "args": ["C:\\playwright\\dist\\index.js"]
    },
    "mui-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@mui/mcp@latest"]
    },
    "Ref": {
      "type": "http",
      "url": "https://api.ref.tools/mcp?apiKey=ref-ee25d82f44bd8d69362f"
    },
    "markitdown": {
      "type": "stdio",
      "command": "py",
      "args": ["-m", "markitdown_mcp"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking@latest"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem@latest",
        "${workspaceFolder}"
      ]
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@brave/brave-search-mcp-server@latest",
        "--transport",
        "stdio"
      ],
      "env": {
        "BRAVE_API_KEY": "${input:brave-api-key}"
      }
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "everything": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"]
    },
    "microsoft.docs.mcp": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "gemini": {
      "command": "npx",
      "args": ["-y", "github:aliargun/mcp-server-gemini"],
      "env": {
        "GEMINI_API_KEY": "${input:gemini-api-key}"
      }
    }
  },
  "inputs": [
    {
      "password": true,
      "id": "exa-api-key",
      "type": "promptString",
      "description": "Exa AI API Key (get from dashboard.exa.ai/api-keys)"
    },
    {
      "password": true,
      "id": "github-pat",
      "type": "promptString",
      "description": "GitHub Personal Access Token"
    },
    {
      "password": true,
      "id": "apify-api-key",
      "type": "promptString",
      "description": "Apify API Key"
    },
    {
      "password": true,
      "id": "brave-api-key",
      "type": "promptString",
      "description": "Brave Search API Key"
    },
    {
      "password": true,
      "id": "gemini-api-key",
      "type": "promptString",
      "description": "Gemini API Key"
    },
    {
      "id": "verifyConnection",
      "type": "command",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector"]
    },
    {
      "id": "enforceMuiRules",
      "type": "command",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "if (!(Test-Path .github/instructions)) { New-Item -ItemType Directory -Path .github/instructions -Force } ; Set-Content -Path .github/instructions/mui.md -Value '# Material UI MCP Rules\n\nUse the mui-mcp server to answer any Material UI questions:\n\n1. Call useMuiDocs to fetch docs for the relevant package.\n2. Call fetchDocs to pull any additional material, using only URLs returned by useMuiDocs.\n3. Repeat until you have all necessary context.\n4. Answer the question using the fetched content and cite the sources.\n'"
      ]
    }
  ]
}
